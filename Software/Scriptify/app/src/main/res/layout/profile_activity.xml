<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"></LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="32dp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/first_name_profile"
                android:text="Profile" />

            <EditText
                android:id="@+id/first_name_profile"
                android:layout_width="317dp"
                android:layout_height="70dp"
                android:layout_marginBottom="24dp"
                android:ems="10"
                android:hint="First name"
                android:inputType="text"
                android:text=""
                app:layout_constraintBottom_toTopOf="@+id/last_name_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/last_name_profile"
                android:layout_width="317dp"
                android:layout_height="70dp"
                android:layout_marginBottom="24dp"
                android:ems="10"
                android:hint="Last name"
                android:inputType="text"
                android:text=""
                app:layout_constraintBottom_toTopOf="@+id/address_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <EditText
                android:id="@+id/address_profile"
                android:layout_width="317dp"
                android:layout_height="70dp"
                android:layout_marginTop="277dp"
                android:ems="10"
                android:hint="Address"
                android:inputType="text"
                android:text=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/username_profile" />

            <EditText
                android:id="@+id/username_profile"
                android:layout_width="317dp"
                android:layout_height="70dp"
                android:layout_marginBottom="24dp"
                android:ems="10"
                android:hint="Username"
                android:inputType="text"
                android:text=""
                app:layout_constraintBottom_toTopOf="@+id/password_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/password_profile"
                android:layout_width="317dp"
                android:layout_height="70dp"
                android:layout_marginBottom="24dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:text=""
                app:layout_constraintBottom_toTopOf="@+id/mail_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/mail_profile"
                android:layout_width="317dp"
                android:layout_height="70dp"
                android:layout_marginBottom="24dp"
                android:ems="10"
                android:hint="Mail"
                android:inputType="textEmailAddress"
                app:layout_constraintBottom_toTopOf="@+id/profileUpdate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/profileUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                app:cornerRadius="10dp"
                android:text="Update"
                android:backgroundTint="@color/dark_theme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/money" />

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="32dp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_money"
                android:text="Money" />
            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:textSize="24sp"
                android:text="Money (â‚¬): "
                app:layout_constraintBottom_toTopOf="@id/btn_openMoneyDialog"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/money_profile"/>
            <TextView
                android:id="@+id/money_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:hint="Amount"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@id/btn_openMoneyDialog"
                app:layout_constraintStart_toEndOf="@id/tv_money"
                app:layout_constraintEnd_toEndOf="parent"/>
            <Button
                android:id="@+id/btn_openMoneyDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="100dp"
                app:cornerRadius="10dp"
                android:text="Add money"
                android:backgroundTint="@color/dark_theme"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >
            <FrameLayout
                android:id="@+id/dialog_add_money"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="#80000000"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/mid_light_theme"
                    android:padding="16dp"
                    android:background="#FFFFFF">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unesite iznos: "
                        android:textSize="18sp"
                        android:textColor="#000000" />

                    <EditText
                        android:id="@+id/input_money_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="Iznos" />

            <ProgressBar
                android:id="@+id/progressBar_profile"
                style="?android:attr/progressBarStyle"
                android:layout_width="161dp"
                android:layout_height="168dp"
                android:layout_marginTop="220dp"
                android:layout_marginEnd="136dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btn_add_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dodaj"
                            android:layout_marginEnd="16dp" />

                        <Button
                            android:id="@+id/btn_Close"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Zatvori" />

                    </LinearLayout>

                </LinearLayout>
            </FrameLayout>
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
