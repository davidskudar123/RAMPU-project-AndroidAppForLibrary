<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="32dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Profile" />

            <ImageView
                android:id="@+id/image_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/first_name_profile"
                tools:srcCompat="@tools:sample/avatars" />

            <EditText
                android:id="@+id/first_name_profile"
                android:layout_width="317dp"
                android:layout_height="70dp"
                android:layout_marginBottom="24dp"
                android:ems="10"
                android:hint="First name"
                android:inputType="text"
                android:text=""
                app:layout_constraintBottom_toTopOf="@+id/last_name_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/last_name_profile"
                android:layout_width="317dp"
                android:layout_height="70dp"
                android:layout_marginBottom="24dp"
                android:ems="10"
                android:hint="Last name"
                android:inputType="text"
                android:text=""
                app:layout_constraintBottom_toTopOf="@+id/username_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/username_profile"
                android:layout_width="317dp"
                android:layout_height="70dp"
                android:layout_marginBottom="24dp"
                android:ems="10"
                android:hint="Username"
                android:inputType="text"
                android:text=""
                app:layout_constraintBottom_toTopOf="@+id/mail_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/mail_profile"
                android:layout_width="317dp"
                android:layout_height="70dp"
                android:layout_marginBottom="24dp"
                android:ems="10"
                android:hint="Mail"
                android:inputType="textEmailAddress"
                app:layout_constraintBottom_toTopOf="@+id/adress_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/adress_profile"
                android:layout_width="317dp"
                android:layout_height="70dp"
                android:layout_marginTop="277dp"
                android:ems="10"
                android:hint="Adress"
                android:inputType="text"
                android:text=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_profile"
                app:layout_constraintBottom_toTopOf="@+id/profileUpdate" />

            <Button
                android:id="@+id/profileUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="100dp"
                app:cornerRadius="10dp"
                android:text="Update"
                android:backgroundTint="@color/dark_theme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
